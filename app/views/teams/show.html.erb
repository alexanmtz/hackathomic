<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @team.name %>
</p>

<p>
  <strong>User:</strong>
  <%= @team.user.email %>
</p>

<p>
  <strong>Picture:</strong>
  <img src="<%= @team.picture %>" />
</p>

<p>
  <strong>Location:</strong>
  <%= @team.location %>
</p>

<p>
  <strong>Members:</strong>
  <ul>
  	<% @team.users.each do |u| %>
  		<li><%= u.email %></li>
  	<% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_team_path(@team) %> |
